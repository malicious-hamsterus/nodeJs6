<%- include("../assets/firstSection", {title: title}) %>
<%- include("../assets/navbar") %>
<h1><%= title %></h1>

<div class="row">
    <div class="col-sm-6">
        <span id="bookId" data-id="<%=book.id%>"></span>
        <%- include("form", {book: book}) %>

    </div>
</div>
<script>
    const id = '<%=book.id%>'
    const formElem = document.getElementById('formData')
    formElem.onsubmit = async (e) => {
      e.preventDefault();
      let response = await fetch('/api/books/' + id, {
        method: 'PUT',
        body: new FormData(formElem)
      });
  
      let result = await response.json();
      location="/books/" + id
    };
</script>
